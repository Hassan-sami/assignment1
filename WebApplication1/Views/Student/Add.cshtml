@{
    ViewData["Title"] = "Add";
}
@model StudentVM
@{
    var selectItems = new SelectList(Model.Departments, "DeptId", "DeptName");
}


<form asp-controller="Student" asp-action="Add"  method="post">
    <div asp-validation-summary="All" class="text-danger">

    </div>
    <div class="mb-3 mt-3">
        <label asp-for="Fname" class="form-label">First Name:</label>
        <input  asp-for="Fname" class="form-control" placeholder="Enter First Name" >
    </div>
    <div class="mb-3 mt-3">
        <label asp-for="Lname" class="form-label">Last Name:</label>
        <input asp-for="Lname" class="form-control" placeholder="Enter Last Name">
    </div>
    <div class="mb-3 mt-3">
        <label asp-for="Address" class="form-label">Address:</label>
        <input asp-for="Address" class="form-control" placeholder="Enter Adress">
    </div>
    <div class="mb-3 mt-3">
        <label asp-for="Age" class="form-label"> Age:</label>
        <input asp-for="Age" class="form-control" placeholder="Enter age">
    </div>
    @*<div class="form-check mb-3">
        <label class="form-check-label">
            <input class="form-check-input" type="checkbox" name="remember"> Remember me
        </label>
    </div>*@
    <select asp-for="DeptId"  asp-items = "selectItems" class="form-select" aria-label="Default select example">
            
    </select>
    <button type="submit" class="btn btn-primary" >Submit</button>
</form>


@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}